<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TindakanActivity">

    <Button
        android:id="@+id/btn_tambah_tindakan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_button_green"
        android:text="Tambah Tindakan"
        android:layout_marginHorizontal="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:id="@+id/linear_tindakan"
        android:layout_above="@+id/btn_tambah_tindakan"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/img_back_tindakan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/robotobold"
                android:text="Tindakan"
                android:textColor="@color/red"
                android:textSize="17sp" />

        </RelativeLayout>

        <Spinner
            android:id="@+id/spinner_mitra_klinik"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="15dp" />

        <Spinner
            android:id="@+id/spinner_jenis_tindakan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="15dp" />

    </LinearLayout>

</RelativeLayout>