<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="id.luvie.luviedokter.fragmentMain.ResepObatFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/green"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/text_nama_dokter_pendapatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nama Dokter"
                android:textSize="15sp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penghasilan Saya"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:fontFamily="@font/robotoreguler"/>

            <TextView
                android:id="@+id/text_jumlah_pendapatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Rp. 0"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/robotobold"/>

            <Button
                android:id="@+id/btn_tarik_dana_pendapatan"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Tarik Dana"
                android:textSize="11sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_button_red"
                android:textColor="@color/white"
                android:fontFamily="@font/robotobold"/>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_pendapatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:tabMode="fixed"
        android:layout_alignParentBottom="true"
        app:tabTextAppearance="@style/MineCustomTabText"
        app:tabIndicatorColor="@color/green"
        app:tabSelectedTextColor="@color/red"
        style="@style/MineCustomTabText"
        android:background="@android:color/white" />

    <FrameLayout
        android:id="@+id/frame_pendapatan"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>


</LinearLayout>